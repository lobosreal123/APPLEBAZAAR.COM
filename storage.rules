rules_version = '2';
// Firebase Storage rules - item images only (separate from Firestore)
// Deploy with: firebase deploy --only storage
// Used by: POS (receipts, inventory) and Applebazaar website (catalog images)
service firebase.storage {
  match /b/{bucket}/o {
    // Item images: users/{userId}/stores/{storeId}/item-images/{filename}
    // - Anyone can read (POS and receipts display images via URL; website loads catalog images)
    // - Only the owning user can upload/update/delete
    match /users/{userId}/stores/{storeId}/item-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
